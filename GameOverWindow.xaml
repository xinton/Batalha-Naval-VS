<Window x:Class="BatalhaNaval.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="tbkScore" HorizontalAlignment="Left" Height="188" Margin="91,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" FontFamily="Segoe UI Light" FontSize="94"><Run Language="pt-br" Text="P2"/></TextBlock>
        <Button x:Name="btnStart" Content="New Game" HorizontalAlignment="Left" Height="24" Margin="93,220,0,0" VerticalAlignment="Top" Width="100" Click="btnStart_Click"/>
        <Image HorizontalAlignment="Left" Height="272" VerticalAlignment="Top" Width="294" Panel.ZIndex="-1" Source="Resources/winner.png"/>
        <TextBlock HorizontalAlignment="Left" Margin="26,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264"><Run Language="pt-br" Text="The Winner is:"  FontSize="36"/></TextBlock>

    </Grid>
</Window>
